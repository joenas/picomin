.tab-content
  #home.tab-pane.active
    %ul.list.inset
      %li.list-divider
        Services
      - @services.each do |service|
        %li{data: {id: service.id}}

  #settings.tab-pane
    %ul.list.inset
      %li.list-divider Settings
      %li
        Faye:
        %i.icon-remove{data: {id: :"faye-status-icon"}}

%div.alert.alert-info
  %button.close{type: :button} Ã—
  %p.alert-message

%script#tmpl-service-info{type: "html/template"}
  {{ if (running) { }}

  %strong {{= name }}
  %span.label.label-success Running
  .pull-right
    %input.btn.btn-info.btn-mini{ type: :button, value: "Restart", data: {type: :service_control, service: "{{= id }}", action: "restart" }}/
    %input.btn.btn-danger.btn-mini{type: "submit", value: "Stop", data: {type: :service_control, service: "{{= id }}", action: "stop" }}

  {{ } else { }}
  %strong {{= name }}
  %span.label.label-important Not running
  %input.pull-right.btn.btn-success.btn-mini{type: "submit", value: "Start", data: {type: :service_control, service: "{{= id }}", action: "start" }}
  {{ } //end }}
